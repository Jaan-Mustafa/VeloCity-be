# VeloCity Port Configuration
# This file defines all port allocations for the project
# Copy this to your .env file or export these variables before starting services

# ============================================
# APPLICATION SERVICES (8081-8089)
# ============================================
USER_SERVICE_PORT=8081
DRIVER_SERVICE_PORT=8082
RIDE_SERVICE_PORT=8083
PAYMENT_SERVICE_PORT=8084
NOTIFICATION_SERVICE_PORT=8085

# API Gateway
GATEWAY_PORT=5000

# ============================================
# INFRASTRUCTURE SERVICES
# ============================================
# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=velocity_db
DB_USERNAME=velocity_user
DB_PASSWORD=velocity_pass

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# MONITORING & TOOLS
# ============================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001

# pgAdmin
PGADMIN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8086

# MailHog
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ============================================
# FRONTEND
# ============================================
VITE_PORT=3000

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_FROM=noreply@velocity.com

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=VeloCity2026SecretKeyForJWTTokenGenerationAndValidationPleaseChangeInProduction
JWT_ACCESS_TOKEN_EXPIRY=900000
JWT_REFRESH_TOKEN_EXPIRY=604800000
