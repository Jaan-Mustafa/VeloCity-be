# VeloCity Environment Variables
# Copy this file to .env and update values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=velocity_db
DB_USERNAME=velocity_user
DB_PASSWORD=velocity_pass

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production-min-256-bits
JWT_ACCESS_TOKEN_EXPIRY=900000
JWT_REFRESH_TOKEN_EXPIRY=604800000

# Email Configuration (MailHog for development)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@velocity.com

# Service Ports
USER_SERVICE_PORT=8081
DRIVER_SERVICE_PORT=8082
RIDE_SERVICE_PORT=8083
PAYMENT_SERVICE_PORT=8084
NOTIFICATION_SERVICE_PORT=8085
GATEWAY_PORT=5000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# External Services (Optional)
# GOOGLE_MAPS_API_KEY=
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# FIREBASE_SERVER_KEY=

# Application Settings
SPRING_PROFILES_ACTIVE=dev
LOG_LEVEL=DEBUG
